Class Solution {
public:
const long long MOD=1000000007;
long long power(long long x,long long n){
if(n==0) return 1;
long long result=1;
x%=MOD;
while(n>0){
    if(n%2==1){
        result=(result*x)%MOD;
    }
    x=(x*x)%MOD;
    n/=2;
} 
return result;
}

    int countGoodNumbers(long long n) {
        long long even_count=(n+1)/2;
        long long odd_count=n/2;
        long long ans=power(5,even_count)%MOD * power(4,odd_count)%MOD;
        return(int) ans;
    }
};
